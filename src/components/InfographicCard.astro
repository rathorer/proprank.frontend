---
import { z } from "astro:content";
import { formatDate } from "../utils";
import type { CollectionEntry } from "astro:content";

export const prerender = true;

interface Props {
	infographic: CollectionEntry<"infographics">;
}
const { infographic } = Astro.props;
---

<div
	class="flex flex-col justify-center items-stretch bg-white rounded-lg overflow-hidden shadow-2xl shadow-gray-light text-seconday1 w-full z-0"
>
	<a href={"/infographics/" + infographic.slug}>
		<img
			src={infographic.data.titleImage}
			alt="Article Image"
			class="w-[600px] h-[250px] object-cover hover:opacity-75 transition duration-300 ease-in-out object-left-top"
		/>
	</a>
	<div class="px-4 flex flex-col justify-between py-5 gap-2">
		<div class="flex justify-between font-medium text-sm text-gray">
			<div class="">
				{formatDate(infographic.data.createdAt)}
			</div>
		</div>
		<h2 class="text-lg font-semibold tracking-wide">
			<a href={"/articles/" + infographic.slug}>
				{infographic.data.title}
			</a>
		</h2>
	</div>
</div>

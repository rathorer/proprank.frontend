---
import { SignedIn, UserButton } from "@clerk/astro/components";
import SearchForm from "./SearchForm.astro";
import DropDown from "./dropdown";
---

<nav class="bg-[#F9F9F9] text-secondary2 border-b border-b-gray-light py-2">
	<div class="flex items-center justify-between py-4 px-4 2xl:px-56">
		<a href="/" class="flex items-center gap-[10px]">
			<img src="/groundLens.png" alt="logo" class="h-8 md:h-10" />
			<div class="text-2xl md:text-3xl font-bold">Ground Lens</div>
		</a>
		<div class="hidden sm:block md:text-xl text-[#30353E]">
			<a href="/about"> why we exist ? </a>
		</div>
		<div class="flex items-center justify-end gap-5">
			<SearchForm />
			<SignedIn>
				<UserButton />
			</SignedIn>
			<DropDown client:only="react" />
		</div>
	</div>
</nav>

---
import { Image } from "astro:assets";
import SearchForm from "./SearchForm.astro";
// import logo from "../images/blog-placeholder-1.jpg";
// console.log(logo);

// "/src/images/pr-logo-inverted.png"
---

<nav class="bg-gray-900 text-white">
	<div
		class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
	>
		<a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
			<Image
				src="/src/images/pr-logo-inverted.png"
				class="h-14"
				alt="TechPeople Logo"
				width={55}
				height={55}
			/>
			<span class="self-center text-2xl font-semibold whitespace-nowrap"
				><span class="text-indigo-400">Tech</span>People</span
			>
		</a>
		<SearchForm />
		<div class="group w-auto">
			<button
				class="block"
				aria-controls="navbar-default"
				aria-expanded="false">
				<span class="sr-only">Open main menu</span>
				<svg
					class="w-5 h-5"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 17 14">
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M1 1h15M1 7h15M1 13h15">
					</path>
				</svg>
			</button>
			<div class="hidden absolute bg-slate-100 shadow-xl shadow-gray-600 z-10 hover:block right-5 group-hover:block text-black font-medium" id="navbar-default">
				<ul
					class="m-5 flex items-center flex-col"
				>
					<li class="py-2 px-2 hover:underline">
						<a
							href="/"
							class=""
							aria-current="page">Home</a
						>
					</li>
					<li class="py-2 px-2  hover:underline">
						<a
							href="/articles"
							class=""
							>All Articles</a
						>
					</li>
					<li class="py-2 px-2  hover:underline">
						<a
							href="/about"
							class=""
							>About</a
						>
					</li>
					<li class="py-2 px-2  hover:underline">
						<a
							href="/login"
							class=""
							>Login</a
						>
					</li>
				</ul>
			</div>
		</div>
			
		
		
	</div>
</nav>

<div class="flex justify-around my-20">
    <div
        class="text-container flex justify-items-center items-center space-x-10"
    >
        <div
            class="textHeading text-base sm:text-lg md:text-xl lg:text-4xl text-blue-600"
        >
            Simplifying.
            <div
                class="textLine text-base sm:text-xs md:text-lg lg:text-2xl text-blue-600"
            >
                The complex world of Indian real-estate
            </div>
        </div>
    </div>
    <div class="gradient-border-container">
        <div class="gradient-border"></div>
        <div class="content-container">
            <img src="Realestatepng.png" alt="City Illustration" />
        </div>
    </div>
</div>
<style>
    .gradient-border-container {
        position: relative;
        width: 250px;
        height: 250px;
    }

    .gradient-border {
        position: absolute;
        inset: 0;
        border-radius: 50%;
        padding: 4px;
        background: conic-gradient(
            #4ade80 0deg,
            #4ade80 120deg,
            #3b82f6 120deg,
            #3b82f6 240deg,
            #ec4899 240deg,
            #ec4899 360deg
        );
        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        /* z-index: -1; */
        animation: spin 8s ease-in-out infinite;
    }

    .content-container {
        width: inherit;
        height: inherit;
        border-radius: 50%;
        overflow: hidden;
    }

    .content-container img {
        width: inherit;
        height: inherit;
        object-fit: cover;
        /* z-index: 1; */
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        33% {
            transform: rotate(120deg);
        }
        34% {
            transform: rotate(120deg);
        } /* Brief pause at 120° */
        35% {
            transform: rotate(120deg);
        } /* Brief pause at 120° */
        36% {
            transform: rotate(120deg);
        } /* Brief pause at 120° */
        37% {
            transform: rotate(120deg);
        } /* Brief pause at 120° */
        66% {
            transform: rotate(240deg);
        }
        67% {
            transform: rotate(240deg);
        } /* Brief pause at 240° */
        68% {
            transform: rotate(240deg);
        } /* Brief pause at 240° */
        69% {
            transform: rotate(240deg);
        } /* Brief pause at 240° */
        70% {
            transform: rotate(240deg);
        } /* Brief pause at 240° */
        100% {
            transform: rotate(360deg);
        }
        0% {
            transform: rotate(0deg);
        }
    }
</style>
<script>
    const phrases = ["Simplifying.", "Sharing.", "Unfolding."];
    const phraseLine = [
        "The complex world of Indian real-estate",
        "Data driven Insights and knowledge",
        "The Underlying risk to derisk your investment",
    ];
    const phrasesColor = ["text-blue-600", "text-green-600", "text-red-600"];
    let index = 0;

    const wheel = document.getElementsByClassName(
        "gradient-border",
    )[0] as HTMLDivElement;

    console.log(wheel);

    const textLineElement = document.querySelector(
        ".textLine",
    ) as HTMLParagraphElement;
    const textHeadingElement = document.querySelector(
        ".textHeading",
    ) as HTMLParagraphElement;

    setInterval(() => {
        textLineElement.classList.remove(phrasesColor[index]);
        textHeadingElement.classList.remove(phrasesColor[index]);
        index = (index + 1) % phrases.length;
        textHeadingElement.textContent = phrases[index];
        textLineElement.textContent = phraseLine[index];
        textHeadingElement.classList.add(phrasesColor[index]);
        textLineElement.classList.add(phrasesColor[index]);
    }, 3000);
</script>

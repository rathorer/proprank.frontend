<form id="search-form" class="" action="/articles/search">
	<label for="search-input" class="sr-only">Search</label>
	<div class="relative flex items-center w-36 md:w-56">
		<input
			type="text"
			id="query"
			name="query"
			class="bg-gray-50 border border-gray-light text-gray-900 text-sm rounded-lg block w-full p-1.5 sm:p-2.5"
			placeholder="Search articles..."
			required
		/>
		<button type="submit" class="p-1 text-gray rounded-md absolute right-1">
			<svg
				class="w-4 h-4"
				aria-hidden="true"
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 20 20"
			>
				<path
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"></path>
			</svg>
			<span class="sr-only">Search</span>
		</button>
	</div>
	<!-- <button class="px-6 py-2 ms-2 text-md font-medium bg-primary text-white rounded-md">Subscribe</button> -->
</form>

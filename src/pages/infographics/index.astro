---
import { getCollection } from "astro:content";
import InfographicCard from "../../components/InfographicCard.astro";
import Pagination from "../../components/Pagination.astro";
import { ARTICLES_PER_PAGE } from "../../constants";
import MainLayout from "../../layouts/MainLayout.astro";

export const prerender = false;
const currentPage = +Astro.url.searchParams.get("page")! || 1;

const allInfographics = (await getCollection("infographics")).sort(
	(a, b) => b.data.createdAt.valueOf() - a.data.createdAt.valueOf(),
);

const totalPages = Math.ceil(allInfographics.length / ARTICLES_PER_PAGE);

const articlesForPage = allInfographics.slice(
	(currentPage - 1) * ARTICLES_PER_PAGE,
	currentPage * ARTICLES_PER_PAGE,
);
---

<MainLayout title={`Infographics | ${currentPage}`}>
	<!-- Infographic Heading -->
	<div class="bg-[#252D47] text-white py-[36px] px-4 sm:px-8 2xl:px-56">
		<div class="flex justify-start gap-2 sm:gap-5 items-center">
			<div class="w-full h-full flex-1">
				<a href="/#infographics" class="text-white inline-block">
					<svg
						class="w-6 h-6 sm:w-7 sm:h-7 mt-3"
						viewBox="0 0 56 56"
						fill="none"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							d="M28.0003 11.6665L11.667 27.9998M11.667 27.9998L28.0003 44.3332M11.667 27.9998L44.3337 27.9998"
							stroke="white"
							stroke-width="4"
							stroke-linecap="round"
							stroke-linejoin="round"></path>
					</svg>
				</a>
			</div>

			<div class="w-full h-full flex flex-col sm:gap-2">
				<h1
					class="text-2xl sm:text-3xl md:text-4xl lg:text-[42px] sm:leading-normal font-bold"
				>
					Infographics
				</h1>
			</div>
		</div>
	</div>

	<!-- All Infographics -->
	<div class="px-4 sm:px-8 2xl:px-56 mb-10">
		<div
			class="grid grid-cols-1 gap-x-8 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 mt-10 gap-y-14"
		>
			{
				articlesForPage.map((article) => (
					<InfographicCard infographic={article} />
				))
			}
		</div>
		<Pagination
			currentPage={currentPage}
			totalPages={totalPages}
			disablePrevious={currentPage === 1}
			disableNext={currentPage === totalPages}
			link="/infographics"
		/>
	</div>
</MainLayout>
